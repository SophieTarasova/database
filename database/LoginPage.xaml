<Page x:Class="database.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:database"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">

    <Grid>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="77,157,0,0" VerticalAlignment="Top" Width="148" Height="21"/>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Height="21" Margin="77,111,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="148"/>
        <Button x:Name="buttonLogin" Content="log in" HorizontalAlignment="Left" Margin="113,211,0,0" VerticalAlignment="Top" Width="75" Click="buttonLogin_Click"/>
        <Button x:Name="buttonNonAuthorized" Content="Read-only mode" HorizontalAlignment="Left" Margin="215,271,0,0" VerticalAlignment="Top" Width="75" Click="buttonNonAuthorized_Click"/>

    </Grid>
</Page>
